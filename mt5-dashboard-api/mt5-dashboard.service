[Unit]
Description=MT5 Dashboard API
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/mt5-dashboard-api
Environment="PATH=/path/to/mt5-dashboard-api/venv/bin"
ExecStart=/path/to/mt5-dashboard-api/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 2

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
